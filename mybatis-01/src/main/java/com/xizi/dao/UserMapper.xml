<?xml version="1.0" encoding="UTF8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xizi.dao.UserDao">
    <!--配置查询所有-->
    <select id="getUserList" resultType="com.xizi.pojo.User">
        select * from user
    </select>
    <select id="getUserById" resultType="com.xizi.pojo.User" parameterType="int">
        select * from user where id=#{iddadsad}
    </select>
    <insert id="addUser"  parameterType="com.xizi.pojo.User">
        insert into user (id,name,pwd) values (#{id},#{name},#{pwd});
    </insert>
    <update id="updateUser" parameterType="com.xizi.pojo.User">
        update user set name=#{name} ,pwd=#{pwd} where id=#{id}
    </update>
    <delete id="deleteUser" parameterType="int">
        delete from user where id=#{id}
    </delete>

    <insert id="addUser2"  parameterType="map">
        insert into user (id,name,pwd) values (#{userid},#{username},#{userpwd});
    </insert>

    <select id="getUserLike" parameterType="String" resultType="com.xizi.pojo.User">
        select * from mybatis.user where name like "%"#{value}"%"
    </select>
</mapper>